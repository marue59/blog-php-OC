{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-md-6 p-3">
            <div class="card mb-2">
                <img src="/public/images/uploads/{{ post.picture }}" class="card-img-top p-4" alt="...">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">{{ post.title }}</h4>
                    <p class="card-text text-justify">{{ post.text }}</p>
                    <p class="card-text mt-1 text-end">{{ post.dateCreation }}</p>                        
                    <p class="card-text mt-1 text-end">{{ post.author }}</p>        
                </div>
            </div> 
        </div>
    </div>
</div>
{% endblock %}