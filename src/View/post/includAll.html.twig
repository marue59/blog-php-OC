{% for post in posts %} 
<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 p-3">
        <div class="card">      
            <img src="/public/images/uploads/{{ post.picture }}" class="card-img-top p-3" alt="...">
            <div class="card-body">
                <h4 class="card-title text-center">{{ post.title }}</h4> 
                <a href="/post/{{ post.id }}" class="btn btn-success">go</a>
                <p>{{ post.text }}</p> 
                <p>{{ post.date_creation }}</p>
            </div>
        </div>
    </div> 
{% endfor %}
