{% extends 'layout.html.twig' %}

{% block content %} 
{% block subtitle %}<h1 class="text-center mt-3">Tous les commentaires</h1>{% endblock %} 
<div class="container">
    <div class="row">
        {% for comment in comments %} 
            <div class="col-sm-12 p-3">     
                <div class="card mb-2 ">      
                    <div class="card-body">
                        <h4 class="card-title text-center">{{ comment.title }}</h4> 
                        <p class="card-text text-justify">{{ comment.text }}</p> 
                        <p class="card-text text-end">{{ comment.dateCreation | date("d/m/Y") }}</p>                        
                        <p class="card-text text-end">Auteur : {{ comment.author }}</p>
                        <p class="card-text text-center"><a href="/post/{{ post.id }}/edit" class="btn btn-success">Modifier</a></p>
                        <p class="card-text text-center"><a href="/post/{{ post.id }}/all-comment/delete" class="btn btn-success">Supprimer</a></p>
                    </div>
                </div>
            </div> 
        {% endfor %}   
    </div> 
</div>
{% endblock %}