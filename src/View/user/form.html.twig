<div class="container ">
{% block subtitle %}{% endblock %}
    <form class="" method="post">
        <div class="form-group">
            <input class="form-control" type="username" value="{{ user.username }}" name="username" placeholder="Entrez votre nom">
        </div>
        <div class="form-group">
            <input class="form-control" type="email" value="{{ user.email }}" name="email" placeholder="Entrez votre email">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" value="{{ user.password }}" name="password"
                placeholder="{% if mdp %}Erreur de mot de passe !{% else %}Entrez votre mot de passe{% endif %}">
        </div>
        <div class="d-flex flex-column justify-content-center"> 
            <a href="/auth" class="btn btn-primary">Connexion </a>
           
                <p class="mt-3">Pas encore de compte ?</p>
            <a href="/create" class="btn btn-primary">Inscription </a>
        </div>
    </form>
    

</div>