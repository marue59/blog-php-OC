{% extends 'admin/index.html.twig' %}

{% block title %}Articles en attente{% endblock %}

{% block content %}
 <div class="container">
    {% block subtitle %}<h1>Articles en attente de validation</h1>{% endblock %}
        <div class="row">
            {% if message is not empty%}
                <div class="alert alert-light" role="alert">
                        {{ message }}
                </div>
            {% endif %}
            {% for post in posts %} 
                <div class="col-lg-6 col-md-12 p-3 ">
                    <div class="card text-center mt-5">   
                        <img src="{{ post.picture }}" class="card-img-top" alt="...">   
                        <div class="card-body">
                            <h5 class="card-title text-center">{{ post.title }}</h5>
                            <p class="card-text">{{ post.text }}</p>
                            <p class="card-text">{{ post.dateCreation }}</p>
                            <p class="card-text">{{ user.post.author }}</p>

                            <a href="/admin/validate-articles/{{ post.id }}" class="btn btn-success">Voir l'article</a>
                        </div>
                    </div>
                </div> 
            {% endfor %}   
        </div>  
</div>
{% endblock %}
