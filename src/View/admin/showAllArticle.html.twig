{% extends 'admin/index.html.twig' %}

{% block title %}Articles en attente{% endblock %}

{% block content %}
    <div class="container">
        {% block subtitle %}<h1 class="text-center mt-3">Articles en attente de validation</h1>{% endblock %}
            <div class="row">
                {% if message is not empty%}
                    <div class="alert alert-light" role="alert">
                            {{ message }}
                    </div>
                {% endif %}
                {% for post in posts %} 
                    <div class="col-lg-4 col-md-12 p-3 ">
                        <div class="card">   
                            <img src="/public/images/uploads/{{ post.picture }}" class="card-img-top p-5" alt="...">   
                            <div class="card-body">
                                <h5 class="card-title text-center m-2">{{ post.title }}</h5>
                                <p class="card-text text-justify">{{ post.text }}</p>
                                <p class="card-text text-end">{{ post.dateCreation | date("d/m/Y") }}</p>
                                <p class="card-text text-end">{{ post.username }}</p>
                                <p class="card-text text-center"><a href="/admin/validate-articles/{{ post.id }}" class="btn btn-success">Valider l'article</a></p>
                            </div>
                        </div>
                    </div> 
                {% endfor %}   
            </div>  
    </div>
{% endblock %}
