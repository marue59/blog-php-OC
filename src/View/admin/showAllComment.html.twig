{% extends 'admin/index.html.twig' %}

{% block title %}Commentaire en attente{% endblock %}

{% block content %}
    <div class="container">
        {% block subtitle %}<h1 class="text-center mt-3">Commentaire en attente de validation</h1>{% endblock %}
        <div class="row">
            {% if message is not empty%}
                <div class="alert alert-light" role="alert">
                    {{ message }}
                </div>
            {% endif %}
            {% for comment in comments %} 
                <div class="col-lg-6 col-md-12 p-3 ">
                    <div class="card ">      
                        <div class="card-body">
                            <p class="card-text tex">{{ comment.text }}</p>
                            <p class="card-text text-end"> Auteur : {{ comment.username }}</p>
                            <p class="card-text text-end">{{ comment.dateCreation | date("d/m/Y") }}</p>
                            <a href="/admin/validate-comment/{{ comment.id }}" class="btn btn-dark">Valider</a>
                        </div>
                    </div>
                </div> 
            {% endfor %}   
        </div>  
    </div>
{% endblock %}
