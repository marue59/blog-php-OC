<div class="container ">
{% block title %}  <h1>Inscription</h1> {% endblock %}
    <p>Veuillez remplir les champs pour effectuer votre inscription</p>
    <form class="" method="post">
    {% if error.errorUserName is not empty %}
        {{ error.errorUserName}} 
    {% endif %}
    {% if error.errorEmail is not empty %}
        {{ error.errorEmail}} 
    {% endif %}
    {% if error.errorPassword is not empty %}
        {{ error.errorPassword}} 
    {% endif %}
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Entrez votre nom">
        </div>
        <div class="form-group">
            <input class="form-control" type="email" name="email" placeholder="Entrez votre email">
        </div>
        <div class="form-group">
            <input class="form-control" type="password"  name="password"
                placeholder="Entrez votre mot de passe">
        </div>
        <div class="d-flex flex-column justify-content-center">
            <button type="submit">Inscription</button>
        </div>
    </form>
</div>