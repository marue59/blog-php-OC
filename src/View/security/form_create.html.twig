<form class="" method="post">
    {% if error.errorUserName is not empty %}
        {{ error.errorUserName}} 
    {% endif %}
    {% if error.errorEmail is not empty %}
        {{ error.errorEmail}} 
    {% endif %}
    {% if error.errorPassword is not empty %}
        {{ error.errorPassword}} 
    {% endif %}
    <p class="mt-3 text-center">Veuillez remplir les champs pour effectuer votre inscription</p>
    <div class="p-2">
        <div class="form-group">
            <input class="form-control" type="text" name="username" 
            placeholder="Entrez votre nom">
        </div>
        <div class="form-group">
            <input class="form-control mt-3" type="email" name="email" 
            placeholder="Entrez votre email">
        </div>
        <div class="form-group">
            <input class="form-control mt-3" type="password"  name="password"
                placeholder="Entrez votre mot de passe">
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Inscription</button>
    </div>
    </form>
</div>