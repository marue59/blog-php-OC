<form class="" method="post">
{% if error.errorEmail is not empty %}
    {{ error.errorEmail}}
    {% endif %}
    <p class="mt-3 text-center">Pour vous connecter veuillez entrer vos informations</p>
    <div class="p-2">
        <div class="form-group">
            <input class="form-control" type="email" name="email" 
                placeholder="Email">
        </div>
        <div class="form-group">
            <input class="form-control mt-3" type="password" name="password"
                placeholder="Mot de passe">
        </div>
    </div>   
    <div class="form-group"> 
        <div class="text-center">
            <button type="submit" class="btn btn-primary mt-3"><a href="/connexion"></a>Connexion</button>
            <p class="mt-3">Pas encore de compte ?</p>
            <a href="/inscription" type="submit" class="btn btn-info">Inscription </a>
        </div>
    </div>
</form>
