                                <a href="/deconnexion" class="btn btn-dark m-2">DÃ©connexion</a>
                            </div> 
                            {% endif %}
                        
                    </div>
                </div>
            </nav>
        </header>
        {% block item %}
        {% endblock %}

        <div class="img-bg">
            {% if error.errorEmail is not empty %}
            <div class="alert alert-warning" role="alert">
                {{ successMessage.messageSuccess }}
            {% endif %} 
            </div>
            {% block content %}
                {% include "project/home.html.twig" %}
            {% endblock %}
        </div>
        <footer> 
            <div class="mt-5 bg-light text-center">
                {% block footer %}
                    <p>&copy; Copyright 2021 </p>
                    <a href="http://mariede.fr">
                    Marie De</a>
                {% endblock %}  
            </div>
