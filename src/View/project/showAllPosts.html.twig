{% extends 'layout.html.twig' %}

{% block content %} 
{% block subtitle %}<h1 class="text-center mt-3">Tous les posts</h1>{% endblock %} 
<div class="container">
    <div class="row">
        {% for post in posts %} 
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 p-3">
                <div class="card ">      
                    <img src="/public/images/uploads/{{ post.picture }}" class="card-img-top p-3" alt="...">
                    <div class="card-body">
                        <h4 class="card-title text-center">{{ post.title }}</h4> 
                        <a href="/post/{{ post.id }}" class="btn btn-success">go</a>
                    </div>
                </div>
            </div> 
        {% endfor %}   
    </div> 
</div>
{% endblock %}